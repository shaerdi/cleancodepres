\defbeamertemplate*{headline}{ntb theme}
{%
    \makebox[\paperwidth][l]{%
        \begin{beamercolorbox}[wd=\paperwidth,ht=0.14\paperheight,dp=0pt]{section text}%
        %\begin{beamercolorbox}[ht=0.13\paperheight]{}
        \includegraphics[height=0.14\paperheight]{NTB-FHO_LOGO_2.png}%
        \makebox[0pt][l]{%
        \includegraphics[height=0.14\paperheight]{banner_ice.png}%
        }%
        \hspace{-\paperwidth}
        \hfill%
        \usebeamerfont{section in head/foot}%
        \raisebox{1em}{%
          \mynavi{}%
        }%
        \hspace*{3em}%
        \end{beamercolorbox}%
    }%
}%

