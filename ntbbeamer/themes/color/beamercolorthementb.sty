\mode<presentation>

\usecolortheme{default}

% Color values
\xdefinecolor{ntbblau}{cmyk}{1,0.45,0,0.18}
\xdefinecolor{ntbsub}{cmyk}{0.75,0.34,0,0.14}
\xdefinecolor{ntblight}{cmyk}{0.1,0.05,0,0.02}
\xdefinecolor{ntbgrau}{cmyk}{0.75,0.34,0,0.14}
\xdefinecolor{colorAlert}{cmyk}{0,1,0,0}

\setbeamercolor{structure}{fg=ntbblau}
\setbeamercolor{alerted text}{fg=colorAlert}

% Titleframe
\setbeamercolor{title}{bg=ntbblau, fg=white}
\setbeamercolor{titlelike}{parent=structure}

% Enumerations
\setbeamercolor{item projected}{fg=white,bg=ntbblau}

% Table of contents
\setbeamercolor{subsection in toc}{bg=white,fg=structure}

% Other
\setbeamercolor{section in head/foot}{fg=ntblight,bg=ntbsub}
\setbeamercolor{section text}{fg=ntblight}

\mode
<all>


